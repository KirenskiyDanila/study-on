{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name }} / {{ lesson.course.name }} / StudyOn{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ lesson.name }}</h1>
        <h3>
            <a class="text-decoration-none text-black" href="{{ path('app_course_show', {'id': lesson.course.id}) }}">
                Курс: {{ lesson.course.title }}
            </a>
        </h3>
        <div class="h5 p-1">
            {{ lesson.content }}
        </div>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="d-flex flex-column">
            <a class="btn btn-success mb-2" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактирование</a>
            {{ include('lesson/_delete_form.html.twig') }}
        </div>
        {% endif %}
    </div>
{% endblock %}
