{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name }} / {{ lesson.course.name }} / StudyOn{% endblock %}

{% block body %}
<div class="container">
    <h1>Редактирование урока "{{ lesson.name }}"</h1>
    <h3>
        <a class="text-decoration-none text-black" href="{{ path('app_course_show', {'id': lesson.course.id}) }}">
            Курс: {{ lesson.course.title }}
        </a>
    </h3>

    {{ include('lesson/_form.html.twig', {'button_label': 'Редактировать'}) }}

    <div class="d-flex flex-column mb-2 mt-2">
        <a class="btn btn-success" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">Назад к уроку</a>
    </div>
    {{ include('lesson/_delete_form.html.twig') }}
</div>
{% endblock %}
