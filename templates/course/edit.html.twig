{% extends 'base.html.twig' %}

{% block title %}{{ course.title }} / StudyOn{% endblock %}

{% block body %}
<div class="container">
    <h1>Редактирование курса "{{ course.title }}"</h1>

    {{ include('course/_form.html.twig', {'button_label': 'Редактировать'}) }}

    <div class="d-flex flex-column mb-2 mt-2">
        <a class="btn btn-success" href="{{ path('app_course_show', {'id': course.id}) }}">Назад к курсу</a>
    </div>
    {{ include('course/_delete_form.html.twig') }}
</div>
{% endblock %}
